{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": false,
        "sourceMap": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "preserveSymlinks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitUseStrict": true,
        "lib": ["es6", "dom", "es2015.iterable", "es2017.string", "es2018.promise"],
        "baseUrl": ".",
        "types": ["svelte"],  
        "paths": {
            "~/*": ["app/*"],
            "svelte-native": ["./node_modules/svelte-native-akylas"],
            "svelte-native/*": ["./node_modules/svelte-native-akylas/*"],
            "tns-core-modules": ["./node_modules/@nativescript/core"],
            "tns-core-modules/*": ["./node_modules/@nativescript/core/*"],
            "*": ["./node_modules/*"]
        }
    },
    "include": ["app/**/*", "references.d.ts"],
    "exclude": ["node_modules", "platforms", "**/angular"]
}
